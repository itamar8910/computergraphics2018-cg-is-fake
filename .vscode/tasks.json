{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build MeshViewer",
            "type": "shell",
            "command": "make",
            "problemMatcher":{
                "owner": "cpp",
                "fileLocation":"absolute",
                "pattern": {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|note):\\s+(.*)$",
                        "file": 1,
                        "location": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/build/"
            }
        }
    ]
}